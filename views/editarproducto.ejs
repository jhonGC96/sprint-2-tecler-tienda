<%- include ("cabeceras/cabecera.editarproducto.ejs") %>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5 offset-md-3 card">
                <div class="card-body">
                    <form action="/updateProducto/<%= data.id_producto %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="descripcion_prod" value="<%= data.descripcion_prod%>" 
                                class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="precio_prod" value="<%= data.precio_prod%>" 
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="id_categoria" value="<%= data.id_categoria%>" 
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="imagen_prod" value="<%= data.imagen_prod%>" 
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="cantidad_inventario_prod" value="<%= data.cantidad_inventario_prod%>" 
                                class="form-control">
                        </div>

                        <button type="submit" class="btn btn-primary">
                            Editar producto
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </body>
    </html>
