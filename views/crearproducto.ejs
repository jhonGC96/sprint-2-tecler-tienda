<%- include ("cabeceras/cabecera.crearproducto.ejs") %>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5">
                <div class="card-body">
                    <form action="/saveproducto" method="POST">
                        <div class="form-group">
                            <input type="text" name="descripcion_prod" placeholder="Descripcion" class="form-control"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="precio_prod" placeholder="Precio" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="id_categoria" placeholder="Categoria" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="imagen_prod" placeholder="Imagen" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="cantidad_inventario_prod" placeholder="Cantidad de piezas" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Guardar producto
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    </body>

    </html>