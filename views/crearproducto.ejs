<%- include ("cabeceras/cabecera.principal.ejs") %>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5">
                <div class="card-body">
                    <form action="/saveproducto" method="POST">
                        <div class="form-group">
                            <input type="text" name="descripcion_prod" placeholder="Descripcion" class="form-control"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="precio_prod" placeholder="Precio" class="form-control">
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="id_categoria" id="exampleFormControlSelect1" placeholder="Categoria">
                                <option>seleccionar categoria</option>
                                <option value=1>Consolas</option>
                                <option value=2>celulares</option>
                                <option value=3>camaras de video</option>
                                <option value=4>laptops</option>
                                <option value=5>audifonos</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" name="imagen_prod" placeholder="Imagen" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="cantidad_inventario_prod" placeholder="Cantidad de piezas"
                                class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Guardar producto
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    </body>

    </html>