<%- include ("cabeceras/cabecera.crear.ejs") %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5">
                <div class="card-body">
                    <form action="/saveuser" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombres_usuario" placeholder="Nombre" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="apellidos_usuario" placeholder="Apellidos" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="email_usuario" placeholder="E-mail" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="username_usuario" placeholder="Usuario" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="pass_usuario" placeholder="Contrasena" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="tipo_usuario" placeholder="Tipo de usuario" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Guardar usuario
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    </body>

    </html>